<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        tools:ignore="MissingPrefix">

    <Button
            android:text="蚂蚁森林直达"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_go_alipay"
            android:textStyle="bold"
            android:textColor="@color/material_light_blue_700"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:bl_corners_radius="8dp"
            app:bl_stroke_color="@color/material_black"
            app:bl_gradient_angle="0"
            app:bl_gradient_endColor="@color/material_orange_900"
            app:bl_gradient_startColor="@color/material_orange_100"
            app:bl_stroke_width="2dp"
            app:bl_ripple_enable="true"
            app:bl_ripple_color="@color/material_yellow_900"/>

    <Button
            android:text="无限重启蚂蚁森林"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_infinite_restart"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:textStyle="bold"
            android:textColor="@color/material_light_blue_700"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:bl_corners_radius="8dp"
            app:bl_stroke_color="@color/material_black"
            app:bl_gradient_angle="0"
            app:bl_gradient_endColor="@color/material_orange_900"
            app:bl_gradient_startColor="@color/material_orange_100"
            app:bl_stroke_width="2dp"
            app:bl_ripple_enable="true"
            app:bl_ripple_color="@color/material_yellow_900" app:layout_constraintVertical_bias="0.19999999"/>

    <TextView
            android:text="当前版本："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_version"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:bl_gradient_angle="0"
            app:bl_gradient_endColor="@color/material_green_900"
            app:bl_gradient_startColor="@color/material_green_100"/>
</android.support.constraint.ConstraintLayout>